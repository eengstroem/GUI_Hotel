@{
    ViewData["Title"] = "Reception Menu";
}
@model GUI_Hotel.Models.DataModels.Booking

<h1>Reception Menu</h1>
<div>
    <form asp-action="Reservations">
        <div class="form-group">
            <label asp-for="BookingDate" class="control-label">Please choose a date to inspect.</label>
            <input asp-for="BookingDate" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Manage Reservations" class="btn btn-primary" />
        </div>
    </form>

    <form asp-action="ReservationsForDate">
        <div class="form-group">
            <label asp-for="BookingDate" class="control-label">Please choose a date to inspect.</label>
            <input asp-for="BookingDate" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="See checked in" class="btn btn-primary" />
        </div>
    </form>
</div>