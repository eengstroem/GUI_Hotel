@{
    ViewData["Title"] = "test";
}
@model GUI_Hotel.Models.DataModels.Booking

<h1>Reception</h1>
<div>
    <form asp-action="Reservations">
        <div class="form-group">
            <label asp-for="BookingDate" class="control-label">Please choose the date you wish to access on.</label>
            <input asp-for="BookingDate" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create new reservations" class="btn btn-primary" />
        </div>
    </form>

    <form asp-action="ReservationsForDate">
        <div class="form-group">
            <label asp-for="BookingDate" class="control-label">Please choose the date you wish to access on.</label>
            <input asp-for="BookingDate" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Go" class="btn btn-primary" />
        </div>
    </form>
</div>